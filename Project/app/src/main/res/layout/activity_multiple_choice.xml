<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multiChoiceaActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MultipleChoiceActivity">

    <RadioButton
        android:id="@+id/answerRadioButton1"
        android:layout_width="328dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="20dp"
        android:onClick="onClick"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/answerRadioButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTextView" />

    <RadioButton
        android:id="@+id/answerRadioButton2"
        android:layout_width="328dp"
        android:layout_height="43dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="20dp"
        android:onClick="onClick"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/answerRadioButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerRadioButton1" />

    <RadioButton
        android:id="@+id/answerRadioButton3"
        android:layout_width="328dp"
        android:layout_height="43dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="20dp"
        android:onClick="onClick"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/answerRadioButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerRadioButton2" />

    <RadioButton
        android:id="@+id/answerRadioButton4"
        android:layout_width="328dp"
        android:layout_height="43dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="147dp"
        android:onClick="onClick"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerRadioButton3" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="335dp"
        android:layout_height="111dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="50dp"
        android:text="@string/questionText"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/answerRadioButton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/statusProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="55dp"
        android:layout_height="0dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="40dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/questionTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/questionsCorectTextView"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/statusProgressBar"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>