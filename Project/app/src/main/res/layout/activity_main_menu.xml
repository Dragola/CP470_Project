<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="343dp"
        android:onClick="onClickSettings"
        android:text="@string/settingsButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multipleChoiceButton" />

    <Button
        android:id="@+id/multipleChoiceButton"
        android:layout_width="175dp"
        android:layout_height="42dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="26dp"
        android:onClick="onClickMultipleChoice"
        android:text="@string/multipleChoiceButtonText"
        app:layout_constraintBottom_toTopOf="@+id/settingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="111dp"
        android:layout_height="53dp"
        android:layout_marginStart="1dp"
        android:onClick="onAdditionClick"
        android:text="@string/DifficultyMedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button11" />

    <Button
        android:id="@+id/button10"
        android:layout_width="111dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        android:onClick="onAdditionClick"
        android:text="@string/DifficultyHard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button" />

    <Button
        android:id="@+id/button11"
        android:layout_width="111dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        android:onClick="onAdditionClick"
        android:text="@string/DifficultyEasy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textMenuAddition"
        android:layout_width="135dp"
        android:layout_height="37dp"
        android:layout_marginBottom="4dp"
        android:text="@string/textAddition"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button11"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>